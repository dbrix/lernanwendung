<!--is index page from fachmoduls-->

<html>
  <head>
    <title> <%=@benutzer.name%> </title>
    <style type="text/css">
        body {
          background-color: #DADADA;
        }

    </style>
      <script src="/assets/jquery.js" type="text/javascript"></script>
      <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
      <script src="/assets/semantic.js" type="text/javascript"></script>

      <script type="text/javascript">

        $(document).ready(function(){
          $('#hamburger').on("click",function(){
            $('.ui.sidebar')
            .sidebar('toggle')
            ;
          });
        })



      </script>
  </head>
  <body>
    <div class="ui black vertical inverted left visible sidebar menu">
      <%=link_to '/wissensgebiete' do%>
      <div class="item">
        Startseite
        <i class="ui white home icon"></i>

      </div>
      <%end%>
      <% if current_user.admin==false && current_user.ansprechpartner==false && current_user.qualTut==false && current_user.tutor==false %>

        <%=link_to 'rechte/tutorin' do%>
          <div class="item">
            Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <% if current_user.admin==false && current_user.ansprechpartner==false && current_user.qualTut==false && current_user.tutor==true %>
        <%=link_to 'rechte/qualifizierte_tutorin' do%>
          <div class="item">
            qualifizierte Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <% if current_user.admin==false && (current_user.ansprechpartner==true || current_user.qualTut==true) %>
        <%=link_to 'rechte/admin' do%>
          <div class="item">
            Admin werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <% if current_user %>
      <div class="item">
        Eingeloggt als  <%= current_user.mail %>
      </div>
      <% else %>
      <%= authorize %>
      <% end %>

      <%=link_to '/logout' do%>

        <div class="item">
          Logout
          <i class="ui white sign-out icon"></i>

        </div>
      <%end%>

    </div>
    <div class="pusher">
      <div class="ui stackable left aligned grid">
      <div class="row">
        <div class="column">
          <div class="ui red inverted segment">

            <h1 class="ui white header">

              <i class="white bars icon" id="hamburger" ></i>

              <div class="content"> Benutzer*in ansehen</div>
            </h1>
          </div>
        </div>
          </div>

        </div>
        <br>

        <div class="ui stackable center alligned grid">
          <div class="ui divided items">
            <div class="item">
              <div class="image">
                <img src="/images/wireframe/image.png">
              </div>
              <div class="content">
                <a class="header"><%=@benutzer.name%></a>
                <div class="meta">
                  <span class="cinema">
                    <% if @benutzer.admin==true %>
                    Admin
                    <% end %>

                    <% if @benutzer.ansprechpartner==true %>
                    Ansprechpartner*in
                    <% end %>

                     <%if @benutzer.qualTut==true %>
                    qualifizierte*r Tutor*in
                    <% end %>

                    <% if @benutzer.tutor==true %>
                    Tutor*in
                    <% end %>

                    <% if @benutzer.admin == false &&@benutzer.ansprechpartner==false && @benutzer.qualTut==false&& @benutzer.tutor==false  %>
                    Student*in
                    <% end %>
                  </span> <!-- hart codierte rolle-->
                </div>
                <div class="description">
                  <p>E-Mail-Adresse: <%=@benutzer.mail%></p>
                  <p>Anzahl erstellter Inhalte: <%=@benutzer.anzahl_inhalte%></p>
                  <p>Aktiv: <%=@benutzer.aktiv%></p>


                </div>

                <div class="extra">
                  <div class="ui right floated primary button">
                    Ansprechpartner*in kontaktieren
                    <i class="right chevron icon"></i>
                  </div>
                </div>
                <br>
                <div class="ui divider"></div>
                <br>
                <h2 class="ui black header">
                  <div class="content"> Erstellte Inhalte</div>
                </h2>
                <div class="ui bulleted list">


                <% @inhalts.each do |inhalt| %>
                <div class="item">          <%= link_to inhalt.titel,  wissensgebiete_fachmodul_lernmethoden_inhalt_path(Wissensgebiet.find(Fachmodul.find(Lernmethoden.find(inhalt.lernmethoden.id).fachmodul_id).wissensgebiet_id),
                  Fachmodul.find(Lernmethoden.find(inhalt.lernmethoden_id).fachmodul_id),Lernmethoden.find(inhalt.lernmethoden_id),inhalt)%>      </div>
<!-- -->
                <%end%>
              </div>

              </div>
            </div>
          </div>
        </div>





    </div>
  </body>
</html>
