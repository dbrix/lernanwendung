<% if current_user%>
<% if current_user.admin==true %>


<html>
  <head>
    <title> Benutzer*innenübersicht </title>
    <style type="text/css">
        body {
          background-color: #DADADA;
        }

    </style>
      <script src="/assets/jquery.js" type="text/javascript"></script>
      <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
      <script src="/assets/semantic.js" type="text/javascript"></script>

      <script type="text/javascript">

        $(document).ready(function(){
          $('#hamburger').on("click",function(){
            $('.ui.sidebar')
            .sidebar('toggle')
            ;
          });
        })



      </script>
  </head>
  <body>
    <div class="ui black vertical inverted left visible sidebar menu">

      <div class="item">
        <div class="ui search">
          <div class="ui icon input">
            <input class="prompt" placeholder="Wissensgebiet suchen" type="text">
            <i class="search icon"></i>
          </div>
          <div class="results"></div>
        </div>
      </div>
      <%  if current_user.admin==true || current_user.ansprechpartner==true || current_user.qualTut==true %>

        <%=link_to 'benutzer/new' do%>
          <div class="item">
            Neue*n Benutzer*in erstellen
            <i class="ui white plus icon"></i>

          </div>
        <%end%>
      <%end%>

      <% if current_user.admin==false && current_user.ansprechpartner==false && current_user.qualTut==false && current_user.tutor==false %>

        <%=link_to 'rechte/tutorin' do%>
          <div class="item">
            Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <% if current_user.admin==false && current_user.ansprechpartner==false && current_user.qualTut==false && current_user.tutor==true %>
        <%=link_to 'rechte/qualifizierte_tutorin' do%>
          <div class="item">
            qualifizierte Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <% if current_user.admin==false && (current_user.ansprechpartner==true || current_user.qualTut==true) %>
        <%=link_to 'rechte/admin' do%>
          <div class="item">
            Admin werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <!-- TODO sidebar consistent in all views-->
      <% if current_user.admin==true %>


        <%=link_to 'rechte/tutorin' do%>
          <div class="item">
            Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>

        <%=link_to 'rechte/qualifizierte_tutorin' do%>
          <div class="item">
            qualifizierte Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>

        <%=link_to 'rechte/admin' do%>
          <div class="item">
            Admin werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>

      <% end %>

      <% if current_user %>
      <div class="item">
        Eingeloggt als  <%= current_user.mail %>
      </div>
      <% else %>
      <%= authorize %>
      <% end %>




      <%=link_to '/logout' do%>

        <div class="item">
          Logout
          <i class="ui white sign-out icon"></i>

        </div>
      <%end%>

    </div>
    <div class="pusher">
      <div class="ui stackable center aligned grid">
      <div class="row">
        <div class="column">
          <div class="ui red inverted segment">

            <h1 class="ui white header">

              <i class="white bars icon" id="hamburger" ></i>

              <div class="content"> Benutzer*innenübersicht </div>
            </h1>
          </div>
        </div>
          </div>
        <div class="row">
          <table class="ui celled table">
            <thead>
              <tr><th>Name</th>
                <th>E-Mail-Adresse</th>
                <th>Aktiv</th>
                <th>Benutzer*in bearbeiten</th>
                <th>Benutzer*in deaktiveren</th>
              </tr>
            </thead>
            <tbody>

          <% @benutzers.each do |benutzer| %>

            <tr>
              <td data-label="Name"><%= link_to benutzer.name, benutzer_path(benutzer) %></td>
              <td data-label="E-Mail-Adresse"><%=benutzer.mail%></td>
              <td data-label="Aktiv"><%=benutzer.aktiv%></td>
              <td>
                <div class="ui button">
                  <%= link_to 'Benutzer*in bearbeiten', edit_benutzer_path(benutzer) %>
                  <i class="red edit icon"></i>
                </div>
              </td>
              <td>
                <div class="ui button">
                  <%= link_to 'Benutzer*in deaktivieren', benutzer_path(benutzer),
                          method: :delete,
                          data: { confirm: 'Sind Sie sicher, dass Sie diese*n Benutzer*in deaktivieren möchten?' } %>
                  <i class=" red trash icon"></i>
                </div>

              </td>
            </tr>

        <%end%>
          </tbody>
        </table>

      </div>

    </div>
  </div>




    </div>
  </body>
</html>

<%else %>
<%= forbidden%>
<% end%>

<%else%>
<%= authorize%>
<%end%>
