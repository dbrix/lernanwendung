

<% if current_user%>
<% if current_user.admin==true %>


<html>
  <head>
    <title> Benutzer*innenübersicht </title>
    <style type="text/css">
        body {
          background-color: #DADADA;
        }

    </style>
      <script src="/assets/jquery.js" type="text/javascript"></script>
      <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
      <script src="/assets/semantic.js" type="text/javascript"></script>

      <script type="text/javascript">

        $(document).ready(function(){
          $('#hamburger').on("click",function(){
            $('.ui.sidebar')
            .sidebar('toggle')
            ;
          });
        })



      </script>
  </head>
  <body>
    <div class="ui black vertical inverted left visible sidebar menu">

      <div class="item">
        <div class="ui search">
          <div class="ui icon input">
            <input class="prompt" placeholder="Wissensgebiet suchen" type="text">
            <i class="search icon"></i>
          </div>
          <div class="results"></div>
        </div>
      </div>


      <% if current_user.admin==false && current_user.ansprechpartner==false && current_user.qualTut==false && current_user.tutor==false %>

        <%=link_to 'rechte/tutorin' do%>
          <div class="item">
            Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <% if current_user.admin==false && current_user.ansprechpartner==false && current_user.qualTut==false && current_user.tutor==true %>
        <%=link_to 'rechte/qualifizierte_tutorin' do%>
          <div class="item">
            qualifizierte Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <% if current_user.admin==false && (current_user.ansprechpartner==true || current_user.qualTut==true) %>
        <%=link_to 'rechte/admin' do%>
          <div class="item">
            Admin werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>
      <% end %>

      <!-- TODO sidebar consistent in all views-->
      <% if current_user.admin==true %>


        <%=link_to 'rechte/tutorin' do%>
          <div class="item">
            Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>

        <%=link_to 'rechte/qualifizierte_tutorin' do%>
          <div class="item">
            qualifizierte Tutor*in werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>

        <%=link_to 'rechte/admin' do%>
          <div class="item">
            Admin werden
            <i class="ui white graduation cap icon"></i>
          </div>
        <% end %>

      <% end %>

      <% if current_user %>
      <div class="item">
        Eingeloggt als  <%= current_user.mail %>
      </div>
      <% else %>
      <%= authorize %>
      <% end %>




      <%=link_to '/logout' do%>

        <div class="item">
          Logout
          <i class="ui white sign-out icon"></i>

        </div>
      <%end%>

    </div>
    <div class="pusher">
      <div class="ui stackable left aligned grid">
      <div class="row">
        <div class="column">
          <div class="ui red inverted segment">

            <h1 class="ui white header">

              <i class="white bars icon" id="hamburger" ></i>

              <div class="content"> Benutzer*in bearbeiten </div>
            </h1>
          </div>
        </div>
          </div>
          <div class="row">
            <div class="column">
              <div class="ui big breadcrumb">
                <%= link_to 'Benutzer*innenübersicht', benutzer_index_path %>
                <i class="right chevron icon divider"></i>

                <div class="active section"> Benutzer*in bearbeiten</div>

              </div>
            </div>
          </div>
          </div>

          <% if @benutzer.errors.any? %>
              <div class="error_messages">
                <div class="ui error message">
                  <p>Benutzer*in konnte nicht bearbeitet werden!</p>
                  <ul>
                    <% @benutzer.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>


            <%= form_for @benutzer, url: {controller:"benutzer",action:"update"}, local: true do |form| %>
            <div class="ui form segment">
              <div class="field">
                <label><%= form.label :name %></label>
                <%= form.text_field :name,placeholder: "Name" %>
              </div>
              <div class="field">
                <label><%= form.label :mail %></label>
                <%= form.text_field :mail,placeholder: "E-Mail-Adresse" %>
              </div>
              <div class="field">
                <label><%= form.label :password %></label>
                <%= form.password_field :password,placeholder: "Passwort" %>
              </div>
              <div class="field">
                <label><%= form.label :password_confirmation %></label>
                <%= form.password_field :password_confirmation,placeholder: "Passwort wiederholen" %>
              </div>

              <div class="inline fields">
                  <label>Rolle</label>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input name="rolle" checked="checked" type="radio">
                      <label>Student*in</label>
                    </div>
                  </div>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input name="rolle" type="radio">
                      <label>Tutor*in</label>
                    </div>
                  </div>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input name="rolle" type="radio">
                      <label>qualifizierte*r Tutor*in</label>
                    </div>
                  </div>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input name="rolle" type="radio">
                      <label>Ansprechpartner*in</label>
                    </div>
                  </div>
                  <div class="field">
                    <div class="ui radio checkbox">
                      <input name="rolle" type="radio">
                      <label>Admin</label>
                    </div>
                  </div>
                </div>
              <%= form.submit "Benutzer*in bearbeiten", class: "ui primary submit button"%>

            </div>
            <% end %>

    </div>
  </body>
</html>

<%else %>
<%= forbidden%>
<% end%>

<%else%>
<%= authorize%>
<%end%>
